# Portlandite 43Ca NMR MAS

spinsys {
  channels         43Ca
  nuclei           43Ca
  # chemical shift: enter here the ISOtropic and CSA in ppm and the asymmetry ETA.
  # Append 'p' to ISO and CSA (e.g. 71.7p  22.9p). ETA is a dimensionless number.
  # do not delete the last three numbers (0 0 0)
  shift            1    1091.27 -22.93 0.06        0 0 0
  # quadrupole parameters: enter the Cq (in Hz, not in MHz) and asymmetry ETA.
  # do not delete the last three numbers (0 0 0)
  quadrupole       1 2  -2193900 0.06        0 0 0
}

par {
  # MAS spinning rate, in Hz
  spin_rate        10000
  gamma_angles     20
  sw               spin_rate*gamma_angles
  method           gcompute

  np               8192                           
  crystal_file     zcw4180

  start_operator   I1x
  detect_operator  I1c

  # 1H Larmor freq. in Hz
  proton_frequency 900e6
  verbose          11
}

proc pulseq {} {
  global par

  delay 1000
}


proc main {} {
  global par tsw

  set f [fsimpson]
  fsave $f $par(name).fid
  fzerofill $f 65536
  # add lorentzian broadening of 40 Hz 
  faddlb $f 40 0
  fft $f
  fsave $f $par(name).spe
  funload $f
}


